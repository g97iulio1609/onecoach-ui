{
  "extends": "../tsconfig.base.json",
  "compilerOptions": {
    "outDir": "./dist",
    "rootDir": "./src",
    "composite": true,
    "jsx": "react-jsx",
    "skipLibCheck": true,
    "esModuleInterop": true,
    "lib": ["esnext"],
    "types": ["react-native"]
  },
  "include": ["src/**/*.native.ts", "src/**/*.native.tsx"],
  "exclude": ["node_modules", "dist", "src/**/*.ts", "src/**/*.tsx"]
}
